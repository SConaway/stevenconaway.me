{
  "name": "stevenconaway.me",
  "description": "My portfolio website",
  "version": "1.0.0",
  "private": true,
  "author": "Steven Conaway <steven@stevenconaway.me>",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "typescript",
    "react",
    "portfolio"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "yarn eslint .",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "c": "cz",
    "upgrade:yarn": "yarn set version latest",
    "upgrade": "yarn upgrade-interactive ; yarn upgrade:yarn"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@vercel/analytics": "^1.6.1",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/spotify-web-api-node": "^5.0.11",
    "autoprefixer": "^10.4.22",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vercel": "^49.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@4.12.0",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "resolutions": {
    "spotify-web-api-node@^5.0.2": "patch:spotify-web-api-node@npm%3A5.0.2#./.yarn/patches/spotify-web-api-node-npm-5.0.2-56949ace62.patch"
  }
}
